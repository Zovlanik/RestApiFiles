<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>RestApiFiles</display-name>

    <!--Servlets-->
    <servlet>
        <servlet-name>SimpleServlet</servlet-name>
        <servlet-class>com.zovlanik.restapifiles.view.servlets.SimpleServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>GetAllUsers</servlet-name>
        <servlet-class>com.zovlanik.restapifiles.view.servlets.GetAllUsers</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CreateUser</servlet-name>
        <servlet-class>com.zovlanik.restapifiles.view.servlets.CreateUser</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>GetAllAccounts</servlet-name>
        <servlet-class>com.zovlanik.restapifiles.view.servlets.GetAllAccounts</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CreateAccount</servlet-name>
        <servlet-class>com.zovlanik.restapifiles.view.servlets.CreateAccount</servlet-class>
    </servlet>

    <!--Servlet-mappings-->
    <servlet-mapping>
        <servlet-name>SimpleServlet</servlet-name>
        <url-pattern>/SimpleServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>GetAllUsers</servlet-name>
        <url-pattern>/GetAllUsers</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CreateUser</servlet-name>
        <url-pattern>/CreateUser</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>GetAllAccounts</servlet-name>
        <url-pattern>/GetAllAccounts</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CreateAccount</servlet-name>
        <url-pattern>/CreateAccount</url-pattern>
    </servlet-mapping>

</web-app>